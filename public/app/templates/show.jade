.main-final
  p 
    | Every morning credits you with 
    span $
    span.number 86,400
    |  seconds.
  a(href="#") NowGoDoWhatYouLove.com
  .image-wrapper
    h1(ng-class="h1Class") {{entry.goal}}
    .meta
      span $86,400 / day
      span {{entry.user}}
  .share
    p share
    i.fa.fa-facebook
    i.fa.fa-twitter
.footer-entries
  .entries(ng-repeat="entry in entries | orderBy: 'id':true | limitTo: 4") 
    p {{entry.id}}
    h4.title {{entry.goal | characters: 35}}

script(type="text/javascript").
  $('.number').counterUp({
    delay: 50,
    time: 2000
  })
