  script(type="text/javascript").
    var ap = $(".about-panel");
    var cb = $(".cursor-plus");

    function showOverlay(){
      ap.css({
        left: 0,
        opacity: 0
      });

      ap.addClass("show");

      ap.animate({
        opacity:1
      },300)
    }

    function hideOverlay(){
      ap.removeClass("show");

      ap.animate({
        opacity: 0
        },300,function(){
        ap.css({
          left:"-100%"
        })
      });
    }

    $('.counter .number').counterUp({
      delay: 50,
      time: 2000
    });

    $(".about").click(function(){
      var sbl = $(".sb-logo")

      if(ap.hasClass("show")){
        hideOverlay();
      }else{
        showOverlay();
      }

    });

    $(".about-panel-background").click(function(){
      hideOverlay();
    });

    ap.mousemove(function(event){
      cb.css({
        top: event.pageY-10,
        left: event.pageX-10
      })
    });

    $(".about-content").mouseover(function(){
      cb.css("display","none");
    })

    $(".about-content").mouseleave(function(){
      cb.css("display","block");
    })